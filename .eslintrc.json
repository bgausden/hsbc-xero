{
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint"
  ],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    },
    "project": "./tsconfig.json"
  },
  "extends": [
    //"eslint-config-office-addins",
    "plugin:node/recommended"
  ],
  "rules": {
    "node/no-unpublished-require": "off",
    "node/no-unsupported-features/es-syntax": [
      "warn",
      {
        "ignores": [
          "modules"
        ]
      }
    ]
  }
}