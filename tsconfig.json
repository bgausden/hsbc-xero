{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "baseUrl": ".",
    "experimentalDecorators": true,
    "jsx": "react",
    "noEmitOnError": true,
    "outDir": "lib",
    "sourceMap": true,
    "moduleResolution": "node",
    "strict": true,
    "target": "ES2021",
    "lib": [
      "ES2021",
      "dom"
    ]
  },
  "exclude": [
    "node_modules",
    "dist",
    "otherSrc",
    "lib",
    "lib-amd"
  ],
  "extends": "@tsconfig/node18/tsconfig.json"
}